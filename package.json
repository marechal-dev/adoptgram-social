{
  "name": "social",
  "version": "1.0.0",
  "description": "AdoptGram Main API",
  "engines": {
    "node": "18.18.2"
  },
  "author": {
    "name": "Pietro Piva Vieira",
    "email": "pietro.developer@gmail.com"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "format": "prettier src --write",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/infra/main.js",
    "start:docs": "npx @compodoc/compodoc -p tsconfig.json -s",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest run --ui",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "test:e2e:watch": "vitest watch --config ./vitest.config.e2e.ts",
    "test:e2e:cov": "vitest run --config ./vitest.config.e2e.ts --coverage",
    "test:e2e:ui": "vitest run --config ./vitest.config.e2e.ts --ui",
    "test:e2e:debug": "vitest run --config ./vitest.config.e2e.ts --inspect-brk --inspect --logHeapUsage --threads=false",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "10.2.7",
    "@nestjs/core": "10.2.8",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/platform-fastify": "10.2.8",
    "@prisma/client": "5.5.2",
    "bcrypt": "5.1.1",
    "dotenv": "16.3.1",
    "fastify": "4.24.3",
    "nestjs-zod": "3.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "zod": "3.22.4",
    "zod-validation-error": "2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@compodoc/compodoc": "1.1.22",
    "@faker-js/faker": "8.2.0",
    "@fastify/static": "6.12.0",
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/swagger": "7.1.14",
    "@nestjs/testing": "10.2.7",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.95",
    "@types/bcrypt": "5.0.2",
    "@types/node": "18.18.2",
    "@types/supertest": "2.0.15",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.10.0",
    "@vitest/coverage-v8": "0.34.6",
    "@vitest/ui": "0.34.6",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "^8.0.0",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "prisma": "5.5.2",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "unplugin-swc": "1.4.3",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.6"
  }
}

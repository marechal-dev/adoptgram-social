{
  "name": "social",
  "version": "1.0.0",
  "description": "AdoptGram Main API",
  "engines": {
    "node": "20"
  },
  "author": {
    "name": "Pietro Piva Vieira",
    "email": "pietro.developer@gmail.com"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "format": "prettier src --write",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/infra/main.js",
    "start:docs": "npx @compodoc/compodoc -p tsconfig.json -s",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.mts",
    "test:e2e:watch": "vitest watch --config ./vitest.config.e2e.mts",
    "test:e2e:cov": "vitest run --config ./vitest.config.e2e.mts --coverage",
    "test:e2e:ui": "vitest --config ./vitest.config.e2e.mts --ui",
    "test:e2e:debug": "vitest run --config ./vitest.config.e2e.mts --inspect-brk --inspect --logHeapUsage --threads=false",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "10.3.0",
    "@nestjs/core": "10.3.0",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/platform-fastify": "10.3.0",
    "@prisma/client": "5.7.1",
    "bcrypt": "5.1.1",
    "date-fns": "3.0.6",
    "dotenv": "16.3.1",
    "fastify": "4.25.2",
    "ioredis": "5.3.2",
    "nestjs-zod": "3.0.0",
    "reflect-metadata": "0.1.14",
    "rxjs": "7.8.1",
    "zod": "3.22.4",
    "zod-validation-error": "2.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@compodoc/compodoc": "1.1.23",
    "@faker-js/faker": "8.3.1",
    "@fastify/static": "6.12.0",
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/swagger": "7.1.17",
    "@nestjs/testing": "10.3.0",
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.101",
    "@types/bcrypt": "5.0.2",
    "@types/node": "18.18.2",
    "@types/supertest": "6.0.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.16.0",
    "@vitest/coverage-v8": "1.1.0",
    "@vitest/ui": "1.1.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.2",
    "husky": "^8.0.0",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "prisma": "5.7.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "unplugin-swc": "1.4.4",
    "vite-tsconfig-paths": "4.2.2",
    "vitest": "1.1.0"
  }
}

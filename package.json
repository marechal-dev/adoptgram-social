{
  "name": "social",
  "version": "1.0.0",
  "description": "AdoptGram Main API",
  "author": {
    "name": "Pietro Piva Vieira",
    "email": "pietro.developer@gmail.com"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prebuild": "npm run lint && npm run format",
    "build": "nest build",
    "prestart:dev": "prisma migrate dev",
    "prestart:prod": "prisma migrate deploy",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "start:docs": "npx @compodoc/compodoc -p tsconfig.json -s",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
  },
  "dependencies": {
    "@nestjs/bull": "10.0.0",
    "@nestjs/common": "10.0.3",
    "@nestjs/core": "10.0.3",
    "@nestjs/platform-express": "10.0.3",
    "@nestjs/platform-fastify": "10.0.3",
    "@prisma/client": "4.16.1",
    "bcrypt": "5.1.0",
    "bull": "4.10.4",
    "dotenv": "16.3.1",
    "nestjs-zod": "2.3.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.21",
    "@faker-js/faker": "8.0.2",
    "@nestjs/cli": "10.0.3",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/swagger": "7.0.6",
    "@nestjs/testing": "10.0.3",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.68",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.17",
    "@types/node": "20.3.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.8",
    "prisma": "4.16.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3",
    "unplugin-swc": "1.3.2",
    "vitest": "0.33.0"
  }
}

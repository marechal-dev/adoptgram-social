{
  "name": "social",
  "version": "1.0.0",
  "description": "AdoptGram Main API",
  "engines": {
    "node": "18"
  },
  "author": {
    "name": "Pietro Piva Vieira",
    "email": "pietro.developer@gmail.com"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prebuild": "npm run lint && npm run format",
    "build": "nest build",
    "prestart:dev": "prisma migrate dev",
    "prestart:prod": "prisma migrate deploy",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "start:docs": "npx @compodoc/compodoc -p tsconfig.json -s",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts --dir src/infra/http/controllers",
    "test:e2e:watch": "vitest watch --config ./vitest.config.e2e.ts --dir src/infra/http/controllers"
  },
  "dependencies": {
    "@nestjs/bull": "10.0.1",
    "@nestjs/common": "10.1.3",
    "@nestjs/core": "10.1.3",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/platform-fastify": "10.1.3",
    "@prisma/client": "5.0.0",
    "bcrypt": "5.1.0",
    "bull": "4.10.4",
    "dotenv": "16.3.1",
    "fastify": "4.20.0",
    "nestjs-zod": "2.3.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@fastify/static": "6.10.2",
    "@compodoc/compodoc": "1.1.21",
    "@faker-js/faker": "8.0.2",
    "@nestjs/cli": "10.1.10",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/swagger": "7.1.6",
    "@nestjs/testing": "10.1.3",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.70",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.5",
    "@types/supertest": "2.0.12",
    "@vitest/coverage-c8": "0.33.0",
    "jest": "29.6.1",
    "jest-environment-node": "29.6.1",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-prettier": "5.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.0",
    "prisma": "5.0.0",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "typescript": "5.1.6",
    "unplugin-swc": "1.3.2",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.33.0"
  }
}